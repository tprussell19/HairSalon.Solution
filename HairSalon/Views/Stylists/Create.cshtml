@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1 class="jumbotron">Add a new stylist</h1>

<div class="text">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name, new {@class="form-label"})
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", id="name"})
    @Html.LabelFor(model => model.ServiceProvided, new {@class="form-label"})
    @Html.TextBoxFor(model => model.ServiceProvided, new {@class="form-control", type="text", id="service-provided"})
    <input type="submit" value="Add New Stylist" class="btn btn-outline-primary" />
  }
  <p>@Html.ActionLink("Show All Stylists", "Index")</p>
</div>