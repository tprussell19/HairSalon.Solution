@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1 class="jumbotron">Clients</h1>

<div class="text">
  @if (@Model.Count == 0)
  {
    <h3>No clients have been added yet!</h3>
    <p>Have you added a stylist yet? You must add at least one stylist before adding clients.</p>
    <p>@Html.ActionLink("Add a new stylist now!", "Create", "Stylists")</p>
  }
  else
  {
    <ul>
      @foreach (Client client in Model)
      {
        <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) |
          @client.Stylist.Name</li>
      }
    </ul>
    <p>@Html.ActionLink("Add new client", "Create")</p>
    @if (@Model.Count > 0)
    {
      <p>@Html.ActionLink("Add new stylist", "Create", "Stylists")</p>
    }
  }
</div>