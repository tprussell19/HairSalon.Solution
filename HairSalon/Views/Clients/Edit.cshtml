@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit: @Html.DisplayFor(model => model.Name)</h2>
<hr />

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name, new {@class="form-label"})
  @Html.EditorFor(model => model.Name, new {@class = "form-control", type="text", id="name"})
  @Html.LabelFor("Service Requested", new {@class="form-label"})
  @Html.EditorFor(model => model.ServiceRequested, new {@class="form-control", type="text", id="service-requested"})
  @Html.LabelFor(model => model.Stylist, new {@class="form-label"})
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save Changes" class="btn btn-outline-warning" />
}
<p>@Html.ActionLink("Back to List", "Index")</p>